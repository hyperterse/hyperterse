{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://raw.githubusercontent.com/hyperterse/hyperterse/refs/heads/main/schema/tool.terse.schema.json",
  "title": "HyperterseToolConfig",
  "description": "Schema for tool-level `.terse` files. This schema validates tool configuration regardless of folder naming convention.",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Optional explicit MCP tool name.",
      "pattern": "^[a-z][a-z0-9_-]*$",
      "minLength": 1
    },
    "description": {
      "type": "string",
      "description": "Tool description exposed through MCP tools/list.",
      "minLength": 1
    },
    "use": {
      "description": "Adapter binding for DB-backed tools.",
      "oneOf": [
        {
          "type": "string",
          "minLength": 1
        },
        {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          },
          "minItems": 1
        }
      ]
    },
    "statement": {
      "type": "string",
      "description": "Statement for DB-backed tools.",
      "minLength": 1
    },
    "scripts": {
      "type": "object",
      "description": "Optional script hooks for tool behavior.",
      "properties": {
        "handler": {
          "type": "string",
          "description": "Custom tool handler script path.",
          "minLength": 1
        },
        "input_transform": {
          "type": "string",
          "description": "Input transform script path.",
          "minLength": 1
        },
        "output_transform": {
          "type": "string",
          "description": "Output transform script path.",
          "minLength": 1
        }
      },
      "additionalProperties": false
    },
    "auth": {
      "type": "object",
      "description": "Optional tool auth plugin configuration.",
      "properties": {
        "plugin": {
          "type": "string",
          "minLength": 1
        },
        "policy": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        }
      },
      "additionalProperties": false
    },
    "inputs": {
      "type": "object",
      "patternProperties": {
        "^[a-zA-Z][a-zA-Z0-9_-]*$": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "enum": [
                "string",
                "int",
                "float",
                "boolean",
                "datetime"
              ],
              "description": "Input type"
            },
            "description": {
              "type": "string",
              "description": "Input description"
            },
            "optional": {
              "type": "boolean",
              "description": "Whether the input is optional"
            },
            "default": {
              "description": "Default value. Must match the configured input type if provided."
            }
          },
          "required": [
            "type"
          ],
          "allOf": [
            {
              "if": {
                "properties": {
                  "type": {
                    "enum": [
                      "string",
                      "datetime"
                    ]
                  }
                },
                "required": [
                  "type"
                ]
              },
              "then": {
                "properties": {
                  "default": {
                    "type": "string"
                  }
                }
              }
            },
            {
              "if": {
                "properties": {
                  "type": {
                    "const": "int"
                  }
                },
                "required": [
                  "type"
                ]
              },
              "then": {
                "properties": {
                  "default": {
                    "type": "integer"
                  }
                }
              }
            },
            {
              "if": {
                "properties": {
                  "type": {
                    "const": "float"
                  }
                },
                "required": [
                  "type"
                ]
              },
              "then": {
                "properties": {
                  "default": {
                    "type": "number"
                  }
                }
              }
            },
            {
              "if": {
                "properties": {
                  "type": {
                    "const": "boolean"
                  }
                },
                "required": [
                  "type"
                ]
              },
              "then": {
                "properties": {
                  "default": {
                    "type": "boolean"
                  }
                }
              }
            }
          ],
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "data": {
      "type": "object",
      "patternProperties": {
        "^[a-zA-Z][a-zA-Z0-9_-]*$": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "enum": [
                "string",
                "int",
                "float",
                "boolean",
                "datetime"
              ]
            },
            "description": {
              "type": "string"
            },
            "map_to": {
              "type": "string"
            }
          },
          "required": [
            "type"
          ],
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    }
  },
  "allOf": [
    {
      "anyOf": [
        {
          "required": [
            "use"
          ]
        },
        {
          "required": [
            "scripts"
          ],
          "properties": {
            "scripts": {
              "type": "object",
              "required": [
                "handler"
              ]
            }
          }
        }
      ]
    }
  ],
  "additionalProperties": false
}