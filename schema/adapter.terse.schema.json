{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://raw.githubusercontent.com/hyperterse/hyperterse/refs/heads/main/schema/adapter.terse.schema.json",
  "title": "HyperterseAdapterConfig",
  "description": "Schema for adapter `.terse` files. This schema validates adapter configuration regardless of folder naming convention.",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Optional adapter name override. Defaults to filename when omitted.",
      "pattern": "^[a-zA-Z][a-zA-Z0-9_-]*$",
      "minLength": 1
    },
    "connector": {
      "type": "string",
      "description": "Connector type.",
      "enum": [
        "postgres",
        "redis",
        "mysql",
        "mongodb"
      ]
    },
    "connection_string": {
      "type": "string",
      "description": "Connection string for the connector.",
      "minLength": 1
    },
    "options": {
      "type": "object",
      "description": "Connector-specific options.",
      "additionalProperties": {
        "oneOf": [
          {
            "type": "string"
          },
          {
            "type": "boolean"
          },
          {
            "type": "number"
          }
        ]
      }
    }
  },
  "required": [
    "connector",
    "connection_string"
  ],
  "additionalProperties": false
}